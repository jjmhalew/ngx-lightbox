{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-lightbox-demo": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "allowedCommonJsDependencies": [
              "file-saver"
            ],
            "outputPath": {
              "base": "dist"
            },
            "index": "index.html",
            "browser": "demo/main.ts",
            "polyfills": [],
            "tsConfig": "tsconfig-demo.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "./demo/img/",
                "output": "./demo/img/"
              }
            ],
            "styles": [
              "./projects/ngx-lightbox/src/lib/styles/lightbox.scss",
              "demo/app.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [],
              "fileReplacements": [],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ngx-lightbox-demo:build:production"
            },
            "development": {
              "buildTarget": "ngx-lightbox-demo:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "main": "src/index.ts",
            "tsConfig": "tsconfig.json",
            "karmaConfig": "karma.conf.js",
            "scripts": []
          }
        }
      }
    },
    "ngx-lightbox": {
      "projectType": "library",
      "root": "projects/ngx-lightbox",
      "sourceRoot": "projects/ngx-lightbox/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "projects/ngx-lightbox/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-lightbox/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-lightbox/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/ngx-lightbox/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-lightbox/**/*.ts",
              "projects/ngx-lightbox/**/*.html"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  },
  "schematics": {
    "@angular-eslint/schematics:application": {
      "setParserOptionsProject": true
    },
    "@angular-eslint/schematics:library": {
      "setParserOptionsProject": true
    }
  }
}
